<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <record id="plan_sale_order_form" model="ir.ui.view">
            <field name="name">plan.sale.order.form</field>
            <field name="model">plan.sale.order</field>
            <field name="arch" type="xml">
                <form name="Plan Sale Order Form">
                    <header>
                        <button name="confirm_request" string="Confirm" class="oe_highlight" states="draft"
                                type="object" groups="exam_3.plan_sale_order_group_reviewer"/>
                        <button name="validate_request" string="Validate" class="oe_highlight" states="confirm" type="object"/>
                        <button name="approve_request" string="Approve" class="oe_highlight" states="validate" type="object"/>
                        <button name="refuse_request" string="Refuse" states="confirm,validate" type="object"/>

                        <field name="state" widget="statusbar" statusbar_visible="draft,confirm,validate"/>
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <label for="name" class="oe_edit_only"/>
                            <h1>
                                <field name="name" placeholder="Plan Name"/>
                            </h1>
                        </div>
                        <group>
                            <field name="quotation"/>
                            <field name="description"/>
                        </group>
                        <notebook>
                            <page string="Partner List" name="partner_list_notes">
                                <field name="res_partner_id"/>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <record id="plan_sale_order_tree" model="ir.ui.view">
            <field name="name">plan.sale.order.tree</field>
            <field name="model">plan.sale.order</field>
            <field name="arch" type="xml">
                <tree string="Car Request Tree">
                    <field name="name"/>
                    <field name="quotation"/>
                    <field name="description"/>
                </tree>
            </field>
        </record>

        <record id="action_plan_sale_order_views" model="ir.actions.act_window">
            <field name="name">Plan Sale Order</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">plan.sale.order</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                Plan Sale Order
            </p>
            <p>
                Click to add a plan sale order
            </p>
            </field>
        </record>

        <menuitem id="plan_sale_order_sub_menu" parent="sale.sale_menu_root" name="Plan Sale Order"/>
        <menuitem id="plan_sale_order_menu" action="action_plan_sale_order_views" parent="plan_sale_order_sub_menu" name="Plan Sale Order"/>
    </data>
</odoo>