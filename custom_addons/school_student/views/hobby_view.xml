<odoo>

    <!--   list view of hooby -->
    <record id="hobby_list_view" model="ir.ui.view">
      <field name="name">hobby.list.view</field>
      <field name="model">hobby</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
        </tree>
      </field>
    </record>

    <!--    form view of hobby-->
    <record id="hobby_form_view" model="ir.ui.view">
      <field name="name">hobby.form.view</field>
      <field name="model">hobby</field>
      <field name="arch" type="xml">
        <form>
          <sheet>
            <group>
              <field name="name"/>
            </group>
          </sheet>
        </form>
      </field>
    </record>

        <!-- actions of hobby -->
    <record id="action_hobby" model="ir.actions.act_window">
      <field name="name">Hobby</field>
      <field name="res_model">hobby</field>
      <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="hobby_sub_menu" parent="school_student_root_menu" name="Hobby"/>

    <menuitem id="hobby_menu" action="action_hobby" parent="hobby_sub_menu" name="Hobby"/>

</odoo>