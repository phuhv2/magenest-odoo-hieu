<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="module_category_staff" model="ir.module.category">
        <field name="name">CRM Sale Customization</field>
    </record>

    <record id="group_plan_sale_order_employee" model="res.groups">
        <field name="name">Employee</field>
        <field name="category_id" ref="crm_sale_customization.module_category_staff"/>
    </record>

    <record id="group_plan_sale_order_leader" model="res.groups">
        <field name="name">Leader</field>
        <field name="category_id" ref="crm_sale_customization.module_category_staff"/>
        <field name="implied_ids" eval="[(4, ref('group_plan_sale_order_employee'))]" />
    </record>

    <record id="group_plan_sale_order_manager" model="res.groups">
        <field name="name">Manager</field>
        <field name="category_id" ref="crm_sale_customization.module_category_staff"/>
        <field name="implied_ids" eval="[(4, ref('group_plan_sale_order_leader'))]" />
    </record>

