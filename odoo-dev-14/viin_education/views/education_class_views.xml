<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
<!--    Thêm tree(list) view-->
    <record id="education_class_view_tree" model="ir.ui.view">
        <field name="name">education.class.tree</field>
        <field name="model">education.class</field>
        <field name="arch" type="xml">
            <tree string="Class Tree">
                <field name="name"/>
                <field name="school_id"/>
            </tree>
        </field>
    </record>

<!--    Thêm form view -->
    <record id="education_class_view_form" model="ir.ui.view">
        <field name="name">education.class.form</field>
        <field name="model">education.class</field>
        <field name="arch" type="xml">
            <form string="Class Form">
                <header>
                    <button name="get_all_students" type="object" string="Log All Students"/>
                    <button name="create_classes" type="object" string="Create Classes"/>
                    <button name="change_class_name" type="object" string="Change Name"/>
                    <button name="add_student" type="object" string="Add Student"/>
                </header>
                <group>
                    <group>
                        <field name="name"/>
                        <field name="school_id"/>
                    </group>
                    <group>
                        <field name="teacher_ids"/>
                    </group>
                </group>
            </form>
        </field>
    </record>

<!--Thêm dữ liệu bản ghi action để mở view-->
    <record id="education_class_action" model="ir.actions.act_window">
        <field name="name">Class</field>
        <field name="res_model">education.class</field>
        <field name="view_mode">tree,form</field>
    </record>

<!--    thêm menu để truy cập model thông qua action vừa tạo-->
    <menuitem id="education_class_menu" action="education_class_action" parent="education_student_menu_root"
              name="Class" sequence="30"/>

</odoo>