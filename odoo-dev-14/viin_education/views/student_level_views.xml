<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
<!--    Thêm tree(list) view-->
    <record id="student_level_view_tree" model="ir.ui.view">
        <field name="name">student.level.tree</field>
        <field name="model">student.level</field>
        <field name="arch" type="xml">
            <tree string="Student Level Tree">
                <field name="name"/>
                <field name="code"/>
                <field name="sequence"/>
            </tree>
        </field>
    </record>

<!--    Thêm giao diện form-->
    <record id="student_level_view_form" model="ir.ui.view">
        <field name="name">student.level.form</field>
        <field name="model">student.level</field>
        <field name="arch" type="xml">
            <form string="Student Level Form">
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>s
                            <field name="sequence"/>
                        </group>
                        <group>
                            <field name="code"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!--Thêm dữ liệu bản ghi action để mở view-->
    <record id="student_level_action" model="ir.actions.act_window">
        <field name="name">Students Level</field>
        <field name="res_model">student.level</field>
        <field name="view_mode">tree,form</field>
    </record>

<!--    thêm menu để truy cập model thông qua action vừa tạo-->
    <menuitem id="student_level_menu" action="student_level_action" parent="education_student_menu_root"
              name="Student Level" sequence="10"/>

</odoo>