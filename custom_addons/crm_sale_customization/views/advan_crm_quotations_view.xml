<odoo>
    <!--    extend list views model crm opportunity-->
    <record id="sale_order_extend_form" model="ir.ui.view">
          <field name="name">sale_order form</field>
          <field name="model">sale.order</field>
          <field name="inherit_id" ref="crm.crm_lead_view_form"/>
          <field name="arch" type="xml">
                <xpath expr="//[@button='%(crm.crm_lead_lost_action)d']" position="attributes">
                    <attribute name="attrs">{'invisible':[('priority','=',3)]}</attribute>
                    <attribute name="groups">group_plan_sale_order_manager</attribute>
                </xpath>
        </field>
    </record>
</odoo>